node agent
{

topics(
gazebo_radiation_plugins/Command command,
gazebo_radiation_plugins/Inspection inspection,
int16 currentLoc,
string radiationStatus
)

guarantee(
forall(x', y', i | x' in REAL and y' in REAL and i in locs and at(x', y') == TRUE and wayP(x', y') == i and inspected(i) == TRUE and radiationStatus !in {red, orange} ->
exists(x, y | x in REAL and y in REAL and wayP(x, y) == i + 1 and command == move(x, y) ) ))


//Kinda unhappy about the last ==, in my head it should be = or := but oh well.
guarantee(
at(x', y') == TRUE and wayP(x', y') == i and inspected(i) == FALSE -> command == inspect(i)
)


guarantee(
radiationStatus in {red, orange} or not exists( x, y| x in REAL and y in REAL and wayP(x, y) == i + 1 )
-> exists (x, y | x in REAL and y in REAL and wayP(x, y) == 0 and command == move(x, y) ) )


}
